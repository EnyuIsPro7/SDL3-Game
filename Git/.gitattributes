# Default to automatic text normalization
* text=auto

# Enforce LF for source and text files
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.inl text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf
Makefile text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.pdf binary
*.zip binary
*.7z binary
*.tar.gz binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
